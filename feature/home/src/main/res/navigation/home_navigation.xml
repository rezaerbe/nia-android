<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.erbe.nowinandroid.feature.home.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_listArticleFragment"
            app:destination="@id/listArticleFragment" />

    </fragment>

    <fragment
        android:id="@+id/listArticleFragment"
        android:name="com.erbe.nowinandroid.feature.home.article.ListArticleFragment"
        android:label="List Article"
        tools:layout="@layout/fragment_list_article" />

</navigation>